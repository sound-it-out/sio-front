@page "/counter"
@inject IDocumentAuditProjectionApiAsync api;

<h1>Counter</h1>

<p>Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>
<button class="btn btn-primary" @onclick="HitApi">Test api</button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }

    private async Task HitApi()
    {
        await api.V1DocumentauditprojectionRefreshPostAsync();
    }
}
